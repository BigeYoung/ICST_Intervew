<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginStart="@dimen/text_margin"
            android:scaleType="fitStart"
            android:src="@drawable/leader_edit" />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Display1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/image"
            android:layout_toRightOf="@id/image"
            android:text="第二轮分组"
            android:textColor="@color/white" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/my_margin">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/totalText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人力62人，分为"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/Black" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:ems="2"
                android:inputType="number" />

            <TextView
                android:id="@+id/numText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="组。"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/Black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/totalText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目62人，分为"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/Black" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:ems="2"
                android:inputType="number" />

            <TextView
                android:id="@+id/numText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="组。"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/Black" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/totalText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资传62人，分为"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/Black" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:ems="2"
                android:inputType="number" />

            <TextView
                android:id="@+id/numText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="组。"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/Black" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/totalText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="知管62人，分为"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/Black" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:ems="2"
                android:inputType="number" />

            <TextView
                android:id="@+id/numText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="组。"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/Black" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/totalText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="外联62人，分为"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/Black" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:ems="2"
                android:inputType="number" />

            <TextView
                android:id="@+id/numText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="组。"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/Black" />


        </TableRow>

    </TableLayout>
</LinearLayout>